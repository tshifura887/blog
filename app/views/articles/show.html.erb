<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  
</ul>

<h2>Comments</h2>
 
<%= render @article.comments%>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<table>
  <tr>
    <td><%= link_to "Back", root_path%></td>
    <td><%= button_to "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></td>
  </tr>
</table>
